@using PruebaTecnicaWDL.Application.Employees.GetAllEmployee
@model List<GetEmployeeDTO>

@{
    ViewData["Title"] = "home";
    var idCategoria = ViewBag.categoriaId;
}




@if (Model.Count != 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Modificar</th>
                <th scope="col">Telefono</th>
                <th scope="col">Fecha</th>
                <th scope="col">Apellido</th>
                <th scope="col">Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {  
                <tr>
                    <th scope="row">
                        <a class="btn btn-outline-info" 
                           asp-area="" 
                           asp-controller="Home" 
                           asp-action="Modificar"
                           asp-route-idEmployee="@employee.Id">Ir
                        </a>
                    </th>
                    <td>@employee.CellPhone</td>
                    <td>@employee.Date</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Name</td>
                </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <div class="card">
        <div class="card-header">
            comenzamos
        </div>
        <div class="card-body">
            <h5 class="card-title">Sin Registros aun</h5>
            <p class="card-text">aun sin empleados</p>
            <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Crear">Crear</a>
        </div>
    </div>
}
